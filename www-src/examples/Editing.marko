    <script src="../sp-framework.js"></script>

    <script>

        var background;

        SPF.set({

            at:"back",

            init: function(PIXI, input) {
                background = new PIXI.Graphics();
                input.container.addChild(background);
            },

            resize:function(PIXI, input){
                background.clear();
                background.beginFill(input.colors[15], 1);
                background.drawRect(0,0,input.width,input.height);
                background.endFill();
            }

        });

        var mid, midContainer;

        SPF.set({

            at:"mid",

            init: function(PIXI, input) {

                midContainer = new PIXI.Container();


                mid =  new PIXI.Graphics();
                midContainer.addChild(mid);

                input.container.addChild(midContainer);



            },

            resize: function(PIXI, input) {


                mid.clear();

                mid.beginFill(input.colors[14], 1);
                mid.drawCircle(0,0, (input.height/2)-100);
                mid.endFill();

                midContainer.position.set(input.width/2, input.height/2);

            },

            render: function(PIXI, input) {


                if(input.editing != null){

                    console.log("input.editing.id: "+input.editing.id);

                    if(input.editing.id =="close"){

                        mid.scale.set(4);

                    } else if(input.editing.id == "medium"){

                        mid.scale.set(2);

                    } else if(input.editing.id == "full"){

                        mid.scale.set(1);

                    }





                } else {
                    mid.scale.set(0);
                }






            }








        });



        SPF.info({
            debug: false,
            title: "Cast",
            tip: "",
            firstName: "Ramiro",
            lastName: "Espada",
            email: "re@ramiroespada.com"
        });

        SPF.start("chorus1");

    </script>


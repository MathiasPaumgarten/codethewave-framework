        <script src="../js/pixi.min.js"></script>
        <script src="../js/TweenMax.min.js"></script>


        <script id="fragment-shader" type="x-shader/x-fragment">
            precision mediump float;

            void main() {
                gl_FragColor = vec4( 1, 0, 0, 1 );
            }
        </script>

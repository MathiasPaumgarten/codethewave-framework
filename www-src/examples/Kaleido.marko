    <body>

    <!--[if lt IE 8]>

        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>

    <![endif]-->

    <script src="../sp-framework.js"></script>

    <script type="text/javascript">

        var fragmentShader = document.getElementById( "fragment-shader" ).innerText;
        var background, backgroundColor;

        SPF.set( {

            at: "mid",

            init: function (PIXI, input ) {

                var kaleidoShader = new PIXI.AbstractFilter( "", fragmentShader );

                background = new PIXI.Graphics();
                background.filters = [ kaleidoShader ];
                background.drawRect( 0, 0, input.width, input.height );

                input.container.addChild( background );
            },

            resize: function( PIXI, input ) {
                background.clear();
                background.drawRect( 0, 0, input.width, input.height );
            },

            render: function( PIXI, input ) {}

        } );


        SPF.info( {
            debug: false,
            title: "Kaleido",
            tip: "",
            firstName: "Mathias",
            lastName: "Paumgarten",
            email: "mail@mathias-paumgarten.com"
        } );

        SPF.start();

    </script>

    </body>


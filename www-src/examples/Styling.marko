    <script src="../sp-framework.js"></script>

    <script>

        var background;

        SPF.set({

            at:"back",

            load: function(PIXI, input) {
                return [ input.patterns.animaltech];
            },


            init: function(PIXI, input) {
                background = new PIXI.extras.TilingSprite(input.patterns.animaltech, 1, 1);
                background.anchor.set(0);
                input.container.addChild(background);


            },

            resize:function(PIXI, input){
                background.width = input.width;
                background.height = input.height;
            },

            render:function(PIXI, input){

                var colorFilter = new PIXI.filters.ColorMatrixFilter();
                colorFilter.desaturate();

                var vSprite = input.container.parent.children[2].children[0].children[0];



                if(input.styling != null){

                    if(input.styling.id == "black"){

                        background.filters = [colorFilter];
                        vSprite.filters = [colorFilter];
                    }

                    if(input.styling.id == "color"){

                        background.filters = [];
                        vSprite.filters = [];
                    }


                } else {

                }


            }

        });


        SPF.info({
            debug: false,
            title: "Styling",
            tip: "",
            firstName: "Ramiro",
            lastName: "Espada",
            email: "re@ramiroespada.com"
        });

        SPF.start("chorus1");

    </script>

